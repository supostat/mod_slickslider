    </config>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_slickslider.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_slickslider.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_slickslider.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_slickslider.ini</language>

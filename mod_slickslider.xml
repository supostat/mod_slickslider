<extension type="module" method="upgrade" client="">
    <name>MOD_SLICKSLIDER</name>
    <creationDate>Oct 2015</creationDate>
    <author>Pugachev Igor</author>
    <authorEmail>ipugachev84@gmail.com</authorEmail>
    <authorUrl>https://github.com/supostat</authorUrl>
    <copyright>Copyright © 2015 - All rights reserved.</copyright>
    <license>GNU General Public License v2.0</license>
    <version>0.0.1</version>
    <description>MOD_SLICKSLIDER_DESCRIPTION</description>
    <files>
        <filename module="mod_slickslider">mod_slickslider.php</filename>
        <filename>mod_slickslider.xml</filename>
        <filename>index.html</filename>
        <folder>language</folder>
        <folder>tmpl</folder>
        <folder>assets</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field
                        name="moduleclass_sfx"
                        type="textarea" rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option
                            value="static"></option>
                </field>
            </fieldset>
            <fieldset name="base" label="MOD_BASE" description="MOD_BASE_FIELDSET_DESCRIPTION">
                <field
                        id="dots"
                        name="dots"
                        type="list"
                        label="MOD_BASE_DOTS_LABEL"
                        description="MOD_BASE_DOTS_DESCRIPTION"
                        class="inputbox"
                        default="0"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                        id="autoplay"
                        name="autoplay"
                        type="list"
                        label="MOD_BASE_AUTOPLAY_LABEL"
                        description="MOD_BASE_AUTOPLAY_DESCRIPTION"
                        class="inputbox"
                        default="0"
                        >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
                </field>

                <field
                        id="fade"
                        name="fade"
                        type="list"
                        label="MOD_BASE_FADE_LABEL"
                        description="MOD_BASE_FADE_DESCRIPTION"
                        class="inputbox"
                        default="0"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                        id="autoplaySpeed"
                        name="autoplaySpeed"
                        type="text"
                        label="MOD_BASE_AUTOPLAYSPEED_LABEL"
                        description="MOD_BASE_AUTOPLAYSPEED_DESCRIPTION"
                        default="2000"
                        >
                </field>

                <field type="checkbox" label="MOD_CHECK" name="check" description="MOD_CHECK_DESCRIPTION" value=""
                       default="" class=""/>

            </fieldset>
        </fields>
